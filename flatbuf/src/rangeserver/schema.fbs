namespace RangeServer;

table Key {
  k:[ubyte];
}

table Record {
    key:Key;
    value:[ubyte];
}

table PrepareRecord {
  transaction_id:string;
  puts:[Record];
  deletes:[Key];
}

table CommitRecord {
    transaction_id:string;
    epoch:int64;
    vid:int64;
}

table AbortRecord {
    transaction_id:string;
}

enum Entry:byte { Prepare = 0, Commit, Abort = 2 }

table LogEntry {
  entry:Entry;
  bytes:[ubyte];
}

root_type LogEntry;